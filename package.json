{
  "name": "conductor",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Code Orchestration System - Self-hosted GitHub App for automating development tasks",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "db:migrate": "pnpm --filter @conductor/core run db:migrate",
    "db:generate": "pnpm --filter @conductor/core run db:generate",
    "docker:dev": "docker compose -f config/docker/docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f config/docker/docker-compose.dev.yml down",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "deploy": "./scripts/deploy.sh",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "service": "./scripts/service.sh",
    "service:status": "./scripts/service.sh status",
    "service:logs": "./scripts/service.sh logs",
    "service:restart": "./scripts/service.sh restart",
    "preview:create": "./scripts/preview-env.sh create",
    "preview:destroy": "./scripts/preview-env.sh destroy",
    "preview:list": "./scripts/preview-env.sh list",
    "test:e2e": "./scripts/e2e-test.sh",
    "test:telegram": "./scripts/test-telegram.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.3"
  }
}
